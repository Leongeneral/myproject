<?xml version = "1.0" encoding = "utf-8" ?>


<ScrollView android:layout_height="match_parent"
android:layout_width="match_parent"
android:fillViewport="true"
xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/titlebar"/>

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还款通知"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="16sp"
                android:textColor="@color/color_primary_white"
                android:background="@drawable/verify_code_bg"/>
            <TextView
                android:id="@+id/notice_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无消息"
                android:textSize="14sp"
                android:layout_below="@+id/tv_refund"
                android:layout_marginTop="20dp"
                android:textColor="@color/font_semi"/>
            <TextView
                android:id="@+id/notice_refund_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_hyperlink"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_overtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逾期通知"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="16sp"
                android:textColor="@color/color_primary_white"
                android:background="@drawable/verify_code_bg"/>
            <TextView
                android:id="@+id/tv_overtime_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无消息"
                android:textSize="14sp"
                android:layout_below="@+id/tv_overtime"
                android:layout_marginTop="20dp"
                android:textColor="@color/font_semi"/>
            <TextView
                android:id="@+id/tv_overtime_time"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_hyperlink"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到期通知"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="16sp"
                android:textColor="@color/color_primary_white"
                android:background="@drawable/verify_code_bg"/>
            <TextView
                android:id="@+id/tv_expire_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无消息"
                android:textSize="14sp"
                android:layout_below="@+id/tv_expire"
                android:layout_marginTop="20dp"
                android:textColor="@color/font_semi"/>
            <TextView
                android:id="@+id/tv_expire_time"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_hyperlink"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>