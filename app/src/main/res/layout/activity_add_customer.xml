<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_gray"
              android:paddingBottom="30dp"
              android:orientation="vertical">

    <include
        layout="@layout/titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/busiTypeRl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv1"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="业务类型"
                    />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/arrow"/>

                <TextView
                    android:id="@+id/busiTypeTv"
                    style="@style/style_tv_15_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv1"
                    android:hint="请选择"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/personLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="客户姓名"/>

                    <EditText
                        android:id="@+id/customerNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入客户姓名"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/certificateTypeRl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv2"
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="证件类型"
                        />

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/arrow"/>

                    <TextView
                        android:id="@+id/certificateTypeTv"
                        style="@style/style_tv_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv2"
                        android:hint="请选择"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="证件号码"/>

                    <EditText
                        android:id="@+id/certificateNumEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入证件号码"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="移动电话"/>

                    <EditText
                        android:id="@+id/phoneNumEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:inputType="number"
                        android:gravity="center_vertical|right"
                        android:hint="请输入移动号码"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/maritalStatusRl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv3"
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="婚姻状况"
                        />

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/arrow"/>

                    <TextView
                        android:id="@+id/maritalStatusTv"
                        style="@style/style_tv_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv3"
                        android:hint="请选择"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="工作单位"/>

                    <EditText
                        android:id="@+id/workUnitsEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入单位名称"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/companyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="公司名称"/>

                    <EditText
                        android:id="@+id/customerNameCompanyEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入公司名称"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="注册资本(万)"/>

                    <EditText
                        android:id="@+id/registeredCapitaEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:digits="0123456789."
                        android:gravity="center_vertical|right"
                        android:hint="请输入注册资本"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="统一信用社会代码"/>

                    <EditText
                        android:id="@+id/certificateNumCompanyEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入代码编号"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="法定代表人"/>

                    <EditText
                        android:id="@+id/legalNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入法人姓名"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="证件号码"/>

                    <EditText
                        android:id="@+id/legalCertificateNumEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入证件号码"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="实际控制人"/>

                    <EditText
                        android:id="@+id/actControllerEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入实控人姓名"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="实控人联系电话"/>

                    <EditText
                        android:id="@+id/actControllerCertificateNumEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:inputType="number"
                        android:gravity="center_vertical|right"
                        android:hint="请输入联系电话"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/imageDataLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv5"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="影像资料"
                    />

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/arrow"/>

                <TextView
                    style="@style/style_tv_15_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv5"
                    android:text="查看"
                    />
            </RelativeLayout>
            <include
                layout="@layout/include_savebtn"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>