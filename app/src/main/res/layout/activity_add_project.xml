<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_gray"
              android:orientation="vertical"
    >

    <include
        layout="@layout/titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/customerNameRl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv0"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="申请人"
                    />

                <ImageView
                    android:id="@+id/iv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/arrow"/>

                <TextView
                    android:id="@+id/customerNameTv"
                    style="@style/style_tv_15_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv0"
                    android:gravity="right"
                    android:hint="请选择申请人"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/busiTypeRl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv1"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="业务类型"
                    />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/arrow"/>

                <TextView
                    android:id="@+id/busiTypeTv"
                    style="@style/style_tv_15_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv1"
                    android:gravity="right"
                    android:hint="请选择"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/productTypeRl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv2"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="产品类型"
                    />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/arrow"/>

                <TextView
                    android:id="@+id/productTypeTv"
                    style="@style/style_tv_15_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv2"
                    android:gravity="right"
                    android:hint="请选择"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/entityCompanyNameRl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv3"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="操作公司"
                    />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/arrow"/>

                <TextView
                    android:id="@+id/entityCompanyNameTv"
                    style="@style/style_tv_15_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv3"
                    android:gravity="right"
                    android:hint="请选择"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="项目名称"/>

                <EditText
                    android:id="@+id/projectNameEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:gravity="center_vertical|right"
                    android:hint="请输入项目名称"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/busiCodeLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingRight="10dp">

                <TextView
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="项目编号"/>

                <TextView
                    android:id="@+id/busiCodeTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/applyTimeRl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv4"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="申请日期"
                    />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/arrow"/>

                <TextView
                    android:id="@+id/applyTimeTv"
                    style="@style/style_tv_15_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv4"
                    android:gravity="right"
                    android:hint="请选择申请日期"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/financingAmountTitleTv"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="融资金额"/>

                <EditText
                    android:id="@+id/financingAmountEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:digits="0123456789."
                    android:gravity="center_vertical|right"
                    android:hint="请输入金额"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/timeLimitTypeRl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv5"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="期限类型"
                    />

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/arrow"/>

                <TextView
                    android:id="@+id/timeLimitTypeTv"
                    style="@style/style_tv_15_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv5"
                    android:gravity="right"
                    android:hint="请选择"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/timeLimitTitleTv"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="融资期限"/>

                <EditText
                    android:id="@+id/timeLimitEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入期限"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!--典当特有的-->
            <LinearLayout
                android:id="@+id/pawnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/baseInterestTypeRl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv6"
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="利率类型"
                        />

                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/arrow"/>

                    <TextView
                        android:id="@+id/baseInterestTypeTv"
                        style="@style/style_tv_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv6"
                        android:gravity="right"
                        android:hint="请选择"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="基准利率"/>

                    <EditText
                        android:id="@+id/interestRateEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:singleLine="true"
                        android:gravity="center_vertical|right"
                        android:hint="请输入基准利率"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/repaymentMethodRl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv7"
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="还款方式"
                        />

                    <ImageView
                        android:id="@+id/iv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/arrow"/>

                    <TextView
                        android:id="@+id/repaymentMethodTv"
                        style="@style/style_tv_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv7"
                        android:gravity="right"
                        android:hint="请选择"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/repaymentWayRl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv10"
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="收取方式"
                        />

                    <ImageView
                        android:id="@+id/iv10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/arrow"/>

                    <TextView
                        android:id="@+id/repaymentWayTv"
                        style="@style/style_tv_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv10"
                        android:hint="请选择"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lesseCustomerNameRl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv8"
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="共同申请人"
                        />

                    <ImageView
                        android:id="@+id/iv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/arrow"/>

                    <TextView
                        android:id="@+id/lesseCustomerNameTv"
                        style="@style/style_tv_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv8"
                        android:gravity="right"
                        android:hint="请选择"
                        />
                </RelativeLayout>
            </LinearLayout>

            <!--担保特有的-->
            <LinearLayout
                android:id="@+id/guaranteeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="保证金比例"/>

                    <EditText
                        android:id="@+id/marginRateEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入保证金比例"
                        android:digits="0123456789."
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="保证金金额"/>

                    <EditText
                        android:id="@+id/depositAmountEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入保证金金额"
                        android:digits="0123456789."
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/isAffiliatedCompanyRl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv11"
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="是否挂靠"
                        />

                    <ImageView
                        android:id="@+id/iv11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/arrow"/>

                    <TextView
                        android:id="@+id/isAffiliatedCompanyTv"
                        style="@style/style_tv_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv11"
                        android:gravity="right"
                        android:hint="请选择"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="资质等级"/>

                    <EditText
                        android:id="@+id/qualificationGradeEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:singleLine="true"
                        android:gravity="center_vertical|right"
                        android:hint="请输入等级内容"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/style_tv_15_black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="保函受益人"/>

                    <EditText
                        android:id="@+id/guaranteeBeneficiaryEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:singleLine="true"
                        android:gravity="center_vertical|right"
                        android:hint="请输入受益人姓名"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>>

            <RelativeLayout
                android:id="@+id/imageDataLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv9"
                    style="@style/style_tv_15_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="影像资料"
                    />

                <ImageView
                    android:id="@+id/iv9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/arrow"/>

                <TextView
                    style="@style/style_tv_15_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv9"
                    android:text="查看"
                    />
            </RelativeLayout>

            <include
                layout="@layout/include_savebtn"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>